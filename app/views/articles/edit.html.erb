<h1 class="text-center mt-4"> Edit this article </h1>

<%= render 'shared/errors', obj: @article %>

<div class="row justify-content-center">
   <div class="col-10">
      <%= form_with(model: @article, local: true, data: { turbo: false }) do |f| %>
         <div class="form-group row">
            <%= f.label :title, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
               <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article"%>
            </div>
         </div>
         <br>
         <div class="form-group row">
            <%= f.label :description, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
               <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
            </div>
         </div>
         <br>
         <div class="form-group row">
            <%= f.label :category, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
               <%= f.collection_select(:category_ids, Category.all, :id, :name,
               {prompt: "Make your selection from the list"}, {multiple: true}) %>
            </div>
         </div>
         <br>
         <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-dark btn-lg col-2" %>
         </div>
      <% end %>
   </div>
</div>
<div class="text-center mt-4">
   <%= link_to 'Return to articles listing', articles_path %> 
</div>